{% extends "layout.html.twig" %}

{% block title %}
    An Error Occurred: {{ status_text }}
{% endblock %}

{% block header %}
{% endblock %}

{% block main %}
    <div style="height:50em !important">
        <div class="row no-gutters justify-content-center text-center mt-5">
            <div class="col-md-3 col-sm-6 col-10">
                <img src="{{ asset('images/error.svg') }}" class="img-fluid">
            </div>
            <h1 class="col-12">Oops! An Error Occurred</h1>
            <h2 class="col-12">The server returned a "{{ status_code }} {{ status_text }}".</h2>

            <div class="col-12">
                Something is broken. Please let us know what you were doing when this error occurred.
                We will fix it as soon as possible. Sorry for any inconvenience caused.
            </div>
        </div>
    </div>
{% endblock %}

{% block switch %}{% endblock %}