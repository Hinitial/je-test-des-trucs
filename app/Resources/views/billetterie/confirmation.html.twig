{# src/AppBundle/Ressources/views/billetterie/confirmation.html.twig #}

{% extends "billetterie/base.html.twig" %}

{% block header %}
    <img src="{{ asset('images/h3.jpg') }}" alt="header" class="img-fluid d-none d-sm-block">
    <img src="{{ asset('images/h3_mobile.jpg') }}" alt="header" class="img-fluid d-block d-sm-none">
{% endblock %}

{% block titre_billetterie %}{% trans %}billetterie.base.confirmation{% endtrans %}{% endblock %}
{% block etape_information %}etape-active{% endblock %}
{% block etape_paiement %}etape-active{% endblock %}
{% block etape_confirmation %}etape-active{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-12 col-sm-6 alert alert-success text-center" role="alert">
        {% trans %}billetterie.confirmation.valide{% endtrans %}
    </div>
</div>
    <div class="row justify-content-center text-center my-3">
        <div class="col-12">
            {% trans %}billetterie.confirmation.text_1{% endtrans %} :
            <strong>{{ email }}</strong>.
            {% trans %}billetterie.confirmation.text_2{% endtrans %} :
            <strong>{{ code }}</strong></div>

    </div>
    <div class="row">
        <p class="text-info col-12">{% trans %}billetterie.confirmation.question_1{% endtrans %}</p>
        <p class="font-weight-light col text-justify">
            {% trans %}billetterie.confirmation.reponse_1{% endtrans %}
        </p>
    </div>

    <div class="row">
        <p class="text-info col-12">{% trans %}billetterie.confirmation.question_2{% endtrans %}</p>
        <p class="font-weight-light col text-justify">
            {% trans %}billetterie.confirmation.reponse_2{% endtrans %}
        </p>
    </div>

    <div class="row">
        <p class="text-info col-12">{% trans %}billetterie.confirmation.question_3{% endtrans %}</p>
        <p class="font-weight-light col text-justify">
            {% trans %}billetterie.confirmation.reponse_3{% endtrans %}
        </p>
    </div>

    <div class="row">
        <p class="text-info col-12">{% trans %}billetterie.confirmation.question_4{% endtrans %}</p>
        <p class="font-weight-light col text-justify">
            {% trans %}billetterie.confirmation.reponse_4{% endtrans %}
        </p>
    </div>
{% endblock %}
